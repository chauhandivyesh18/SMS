<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/FooterLayoutStyle"
    tools:context=".Login.PinOrFingerPrintVerificationFragments.PinOrFingerPrintVerificationBottomFragment">

    <TextView
        android:id="@+id/if_have_another_account_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserratlight"
        android:text="@string/if_have_another_account"
        android:textColor="?attr/textColorAccent"
        android:textSize="@dimen/fontMedium" />

    <TextView
        android:id="@+id/click_here_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserratlight"
        android:text="@string/click_here"
        android:textColor="?attr/textColorAccent"
        android:textSize="@dimen/fontMedium" />

</LinearLayout>
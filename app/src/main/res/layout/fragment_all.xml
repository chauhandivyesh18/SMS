            style="@style/SearchAllLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                style="@style/SearchAllTitleTextView"
                android:text="@string/equity" />

            <View style="@style/DividerStyle" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/equity_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <ImageView
                android:id="@+id/equity_forward_arrow"
                style="@style/SearchAllForwardArrow" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/futures_search_layout"
            style="@style/SearchAllLayout"

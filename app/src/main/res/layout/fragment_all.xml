                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <ImageView
                android:id="@+id/options_forward_arrow"
                style="@style/SearchAllForwardArrow" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/currency_search_layout"

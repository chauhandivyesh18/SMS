<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/flatno_textview"
            style="@style/PrimaryTextView"
            android:text="Flat : 501,"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name_textview"
            style="@style/PrimaryTextView"
            android:layout_marginStart="8dp"
            android:text="Omkar Mahadik"
            app:layout_constraintStart_toEndOf="@id/flatno_textview"
            app:layout_constraintTop_toTopOf="@id/flatno_textview" />

        <TextView
            android:id="@+id/accompanies_textview"
            style="@style/PrimaryTextView"
            android:layout_marginTop="4dp"
            android:text="Accompanies : 4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/flatno_textview" />

        <TextView
            android:id="@+id/date_textview"
            style="@style/PrimaryTextView"
            android:text="24-Apr-2019"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/slot_textview"
            style="@style/PrimaryTextView"
            android:layout_marginTop="4dp"
            android:text="3pm - 4pm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/date_textview" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
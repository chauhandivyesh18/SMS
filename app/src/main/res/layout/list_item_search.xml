<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/list_item"
        style="@style/SearchConstraintLayoutStyleForListItems">

        <TextView
            android:id="@+id/cname_textview"
            style="@style/PrimaryTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Synergy Bizcon" />

        <TextView
            android:id="@+id/exchange_type_textview"
            style="@style/SecondaryFirstTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cname_textview"
            tools:text="BSE :" />

        <TextView
            android:id="@+id/scrip_code_textview"
            style="@style/SecondaryTextView"
            app:layout_constraintBottom_toBottomOf="@id/exchange_type_textview"
            app:layout_constraintStart_toEndOf="@id/exchange_type_textview"
            app:layout_constraintTop_toTopOf="@id/exchange_type_textview"
            tools:text="35454" />

        <FrameLayout
            android:id="@+id/add_icon_layout"
            style="@style/AddIconLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/add_icon_imageview"
                style="@style/AddIconImageView" />

        </FrameLayout>

    </android.support.constraint.ConstraintLayout>

    <View style="@style/DividerStyle" />

</LinearLayout>